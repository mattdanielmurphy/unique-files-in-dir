{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"outDir": "dist",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"types": ["node", "express"],
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dev", "dist"]
}
